@model IEnumerable<NewOne.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<style>
    #btnSearch{
        visibility:hidden;
        height:0px
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create", null, new
{
    @class = "btn btn-primary"
})
</p>
<div class="ms-md-auto pe-md-5 d-flex align-items-center">
    <div class="input-group input-group-outline">
        @using (Html.BeginForm())
        {
            <label class="form-label">Tìm kiếm</label>
            @Html.TextBox("searchString", null, new { @class = "form-control" })

            <input type="submit" value="" id="btnSearch"/>
        }


    </div>
   
</div>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Point)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Point)
    </td>
    <td>
        <img src="@item.Avatar" height="150" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new
   {
       @class = "btn btn-primary"
   })
        @Html.ActionLink("Details", "Details", new { id = item.ID }, new
   {
       @class = "btn btn-success"
   })
        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new
   {
       @class = "btn btn-danger"
   })
    </td>
</tr>
    }

</table>
